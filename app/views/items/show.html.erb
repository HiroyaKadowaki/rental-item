<%= render "devise/shared/header" %>

<div class="items-main">
  <div class="shows">
    <h3>備品名</h3>
    <div class="show-name">
      <%= @item.name %>
    </div>
    <h3>商品番号</h3>
    <div class="show-font">
      <%= @item.number %>
    </div>
    <h3>説明文</h3>
    <div class="show-font">
      <%= @item.comment %>
    </div>
  </div>
  <div class="edit-path">
    <%= link_to '編集', edit_item_path, method: :get, class: "item-edit" %>
    <p class="or-font">or</p>
    <%= link_to '削除', item_path, method: :delete, class:'item-destroy' %>
  </div>

  <div class="sell-btn-contents">
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
</div>

<%= render "devise/shared/footer" %>
