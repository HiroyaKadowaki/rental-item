<%= render "devise/shared/header" %>

<div class="items-main">
  <div class="item-show">
    <h3>備品名</h3>
    <div class="show-name">
      <%= @item.name %>
    </div>
    <h3>商品番号</h3>
    <div class="show-font">
      <%= @item.number %>
    </div>
    <h3>説明文</h3>
    <div class="show-font">
      <%= @item.comment %>
    </div>
  </div>

  <div class='rental-item'>
    <% if @item.rental != nil %>
      <%= @item.rental.created_at.to_s(:date_jp) %>
    <% end %>
  </div>
</div>

<div class="switch">
  <%= link_to '編集', edit_item_path, method: :get, class: "item-switch" %>
  <%= link_to '削除', item_path, method: :delete, class:'item-switch' %>
  <%=link_to 'もどる', root_path, class:"item-switch" %>
</div>

<%= render "devise/shared/footer" %>
