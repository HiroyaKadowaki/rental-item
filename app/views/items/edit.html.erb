<div class='wrapper'>
  <%= render "devise/shared/header" %>

  <div class="items-main">
    <h2 class="items-title">備品情報入力</h2>
    <%= form_with model: @item, local: true do |f| %>

    <%= render "devise/shared/error_messages", model: f.object %>

    <div class="new-items">
      <div class="weight-bold-text">
        備品ナンバー
        <span class="indispensable-required">必須</span>
      </div>
      <%= f.text_area :number, class: "finld-line" %>
      <div class="weight-bold-text">
        備品名
        <span class="indispensable-required">必須</span>
      </div>
      <%= f.text_area :name, class: "finld-line" %>

      <div class="sell-btn-contents">
        <%= f.submit "変更する" ,class:"sell-btn" %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="switch">
    <%=link_to 'もどる', item_path, class:"item-switch" %>
  </div>

  <%= render "devise/shared/footer" %>
</div>
