<header class='top-header'>
  <div class='top-space'>
    <h1 class="top-name">貸し出し管理アプリ</h1>
    <% if user_signed_in? %>
      <ul class="login-list">
        <li><%= link_to '備品の追加', new_item_path, class: "new-item" %></li>
        <li><%= link_to current_user.name, user_path(current_user.id), class: "user-name" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      </ul>
    <% else %>
      <ul class='login-list'>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      </ul>
    <% end %>
  </div>

</header>
